{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@entity/*": ["entity/*"],
      "@interface/*": ["interface/*"],
      "@locale/*": ["locale/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
